{
  "name": "pulseui-base",
  "version": "2.1.6",
  "description": "Ultra-lightweight React component library with design tokens, multi-brand theming, and TypeScript support. Zero heavy dependencies - perfect for production apps.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./styles": {
      "types": "./types/styles.d.ts",
      "import": "./dist/pulseui-base.css",
      "require": "./dist/pulseui-base.css"
    },
    "./tokens": {
      "types": "./types/tokens.d.ts",
      "import": "./dist/tokens.css",
      "require": "./dist/tokens.css"
    },
    "./scss": {
      "types": "./types/scss.d.ts",
      "import": "./src/styles/pulseui-base.scss",
      "require": "./src/styles/pulseui-base.scss"
    },
    "./scss-compiled": {
      "types": "./types/scss-compiled.d.ts",
      "import": "./dist/pulseui-base.scss.css",
      "require": "./dist/pulseui-base.scss.css"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "types",
    "src/styles",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css",
    "**/*.scss",
    "./src/index.ts",
    "./dist/index.js",
    "./dist/index.esm.js"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run generate-themes && npm run build:lib && npm run build:styles && npm run build:types",
    "build:vite": "vite build",
    "build:prod": "npm run build:vite && npm run build-storybook",
    "build:lib": "vite build --config vite.lib.config.ts",
    "build:types": "tsc --project tsconfig.build.json",
    "build:styles": "sass src/styles/_tokens.scss:dist/tokens.css --style compressed && sass src/styles/pulseui-base.scss:dist/pulseui-base.scss.css --style compressed",
    "prepublishOnly": "npm run build",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build -c .storybook",
    "preview": "vite preview",
    "pack:preview": "npm pack --dry-run",
    "pack:check": "npm pack && tar -tf *.tgz",
    "generate-themes": "node scripts/generate-themes.js",
    "test": "echo 'No tests configured - use npm run build to verify compilation'",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "sync-tokens": "node scripts/sync-figma-tokens.js",
    "test-figma": "node scripts/test-figma-sync.js",
    "debug-figma": "node scripts/debug-figma-access.js",
    "explore-figma": "node scripts/explore-figma-file.js",
    "brand-manager": "node scripts/brand-manager.js",
    "create-brand": "node scripts/brand-manager.js --create",
    "validate-brand": "node scripts/brand-manager.js --validate",
    "list-brands": "node scripts/brand-manager.js --list"
  },
  "peerDependencies": {
    "@emotion/react": "^11.0.0",
    "@emotion/styled": "^11.0.0",
    "@mui/icons-material": "^5.0.0 || ^6.0.0 || ^7.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "devDependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@eslint-react/eslint-plugin": "^1.52.9",
    "@mui/icons-material": "^5.15.0",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-themes": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react-hooks": "^5.0.0-rc.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sass": "^1.89.2",
    "storybook": "^8.6.14",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-lib-inject-css": "^2.2.2"
  },
  "keywords": [
    "react",
    "typescript",
    "design-system",
    "ui-components",
    "css-modules",
    "scss",
    "design-tokens",
    "accessibility",
    "responsive",
    "theming",
    "animations",
    "error-handling",
    "performance"
  ],
  "author": "Kazuri",
  "license": "Apache",
  "repository": {
    "type": "git",
    "url": "https://github.com/kazuri1/pulseui-base.git"
  },
  "bugs": {
    "url": "https://github.com/kazuri1/pulseui-base/issues"
  },
  "homepage": "https://github.com/kazuri1/pulseui-base#readme",
  "dependencies": {
    "@chatscope/chat-ui-kit-react": "2.1.1",
    "@chatscope/chat-ui-kit-styles": "1.4.0",
    "@mui/x-charts": "8.11.1",
    "d3-array": "3.2.4",
    "d3-scale": "4.0.2",
    "typescript-eslint": "^8.42.0"
  }
}
